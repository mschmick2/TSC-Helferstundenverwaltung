# =============================================================================
# VAES - Schutz für /app Verzeichnis
# Dieses Verzeichnis enthält die Anwendungslogik und darf NICHT über Web erreichbar sein!
# =============================================================================

# Apache 2.4+
<IfModule mod_authz_core.c>
    Require all denied
</IfModule>

# Apache 2.2 (Fallback)
<IfModule !mod_authz_core.c>
    Order allow,deny
    Deny from all
</IfModule>
