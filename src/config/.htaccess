# =============================================================================
# VAES - Schutz für /config Verzeichnis
# Enthält Konfigurationsdateien mit sensiblen Daten (DB-Passwörter, API-Keys)!
# =============================================================================

# Apache 2.4+
<IfModule mod_authz_core.c>
    Require all denied
</IfModule>

# Apache 2.2 (Fallback)
<IfModule !mod_authz_core.c>
    Order allow,deny
    Deny from all
</IfModule>
